- url = post.persisted? ? admin_post_path(post) : admin_posts_path
= form_for post, :as => :post, :url => url do |f|

  - unless post.errors.blank?
    .errors
      = post.errors.full_messages.join(", ")
  = f.label :title
  = f.text_field :title
  
  = f.label :content
  = f.text_area :content
  
  %br/
  = f.label :published
  = f.check_box :published
  
  %br/
  = f.submit