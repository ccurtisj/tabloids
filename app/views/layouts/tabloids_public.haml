    .container-fluid
      - unless flash[:notice].blank?
        .row-fluid
          .span-12
            = flash[:notice]
          
      .row-fluid
        .span2
          - if Tabloids::Category.count > 0
            %h2 Categories
            %ul
              - Tabloids::Category.all.each do |category| 
                %ul= category.name
          
          - if all_post_tags.any?
            %h2 Tags
            %ul
              - all_post_tags.each do |tag| 
                %ul= tag
        .span10
          = yield
    
